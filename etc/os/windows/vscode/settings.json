
{
    // ------------------------------------------------------------------------
    // 外観
    // ------------------------------------------------------------------------
    "workbench.colorTheme": "Noctis",
    "workbench.colorCustomizations": {
        "editor.background": "#041d20", // noctis theme
        "terminal.background": "#041d20" // noctis theme
        // "editor.background": "#181529", // palenight theme
        // "terminal.background": "#181529" // palenight theme
    },
    "workbench.iconTheme": "material-icon-theme",
    "editor.matchBrackets": "always",
    "workbench.tree.indent": 20,
    "breadcrumbs.enabled": true,
    "editor.minimap.enabled": false,
    "workbench.editor.tabSizing": "shrink",
    "editor.renderWhitespace": "all",
    "editor.renderControlCharacters": true,
    "code-eol.newlineCharacter": "¬",
    "code-eol.returnCharacter" : "⇠",
    "code-eol.crlfCharacter"   : "↵",
    "code-eol.highlightExtraWhitespace": true,
    "code-eol.decorateBeforeEol": true,
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.enablePreviewFromCodeNavigation": false,

    // ------------------------------------------------------------------------
    // フォント
    // ------------------------------------------------------------------------
    "editor.fontFamily": "UDEV Gothic NF",
    // "editor.fontFamily": "PlemolJP Console NF",
    // "editor.fontFamily": "更紗等幅ゴシック J",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    // "terminal.integrated.fontFamily": "PlemolJP Console NF",
    // "terminal.integrated.fontFamily": "更紗等幅ゴシック J",
    "terminal.integrated.fontFamily": "UDEV Gothic NF",
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.fontWeight": "400",

    // ------------------------------------------------------------------------
    // カーソル
    // ------------------------------------------------------------------------
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.wordWrap": "on",
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?、。「」（）；：・？＜＞＋－＊／｛｝｜～＆％＄＃”！’　にをはがのとも",
    "workbench.list.keyboardNavigation": "simple",
    "workbench.list.automaticKeyboardNavigation": false, // 無効化しないとエクスプローラーでhjklで移動できない

    // ------------------------------------------------------------------------
    // ターミナル
    // ------------------------------------------------------------------------
    "terminal.explorerKind": "external",
    "terminal.integrated.allowChords": false,
    "terminal.external.windowsExec": "%LOCALAPPDATA%\\Microsoft\\WindowsApps\\wt.exe",
    "terminal.integrated.cursorBlinking": true,

    // ------------------------------------------------------------------------
    // 予測変換
    // ------------------------------------------------------------------------
    "editor.acceptSuggestionOnEnter": "on",
    "editor.quickSuggestionsDelay": 30,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

    // ------------------------------------------------------------------------
    // デバッグ
    // ------------------------------------------------------------------------
    "debug.allowBreakpointsEverywhere": true,
    "debug.inlineValues": true,

    // ------------------------------------------------------------------------
    // ファイル
    // ------------------------------------------------------------------------
    "files.autoGuessEncoding": true,
    "files.associations": {
        ".xonshrc": "python",
        ".tmpl": "html"
    },
    "workbench.editor.focusRecentEditorAfterClose": false,

    // ------------------------------------------------------------------------
    // マクロ
    // ------------------------------------------------------------------------
    "macros": {
        "nvim.history.up": [
            "vscode-neovim.delete-all-cmdline",
            "vscode-neovim.history-up-cmdline"
        ],
        "nvim.history.down": [
            "vscode-neovim.delete-all-cmdline",
            "vscode-neovim.history-down-cmdline"
        ]
    },

    // ------------------------------------------------------------------------
    // 言語別設定
    // ------------------------------------------------------------------------
    // html
    "html.format.endWithNewline": true,

    // markdown
    "markdownlint.config": {
        "MD004": false,
        "MD007": false,
        "MD009": {
            "br_spaces": 2
        },
        "MD013": false,
        "MD032": false
    },
    "[markdown]": {
        "editor.defaultFormatter": "yzhang.markdown-all-in-one"
    },
    "markdown-preview-enhanced.mermaidTheme": "dark",
    "markdown.extension.list.indentationSize": "inherit",

    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },

    // ------------------------------------------------------------------------
    // その他
    // ------------------------------------------------------------------------
    "workbench.startupEditor": "newUntitledFile",
    "editor.mouseWheelZoom": true,

    // ファイルエクスプローラーの表示対象外
    "files.exclude": {
        "**/.git": false,
        "**/.svn": false,
        "**/.hg": false,
        "**/CVS": false,
        "**/.DS_Store": false,
        "**/.history": false
    },

    // 検索の対象外
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/.history": true
    },

    // ファイル監視の除外
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/.svn/**": true,
        "**/target/**": true,
        "**/.history/**": true
    },
    "vscode-neovim.neovimInitVimPaths.linux": "~/.config/nvim/init.lua",
    "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",

    "tabnine.experimentalAutoImports": false,
    "workbench.editor.untitled.hint": "hidden",
    "vscode-neovim.useWSL": true,
    "markdown-preview-github-styles.colorTheme": "light",
    "MarkdownPaste.path": "${fileDirname}/images",
    "MarkdownPaste.silence": true,
    "hediet.vscode-drawio.theme": "Kennedy",
    "plantuml.commandArgs": ["-Dfile.encoding=UTF-8"],
    "plantuml.jarArgs": ["-charset", "UTF-8"]
}
