{
    // ------------------------------------------------------------------------
    // 外観
    // ------------------------------------------------------------------------
    "workbench.colorTheme": "Noctis",
    "workbench.colorCustomizations": {
        "editor.background": "#041d20",
        "terminal.background": "#041d20"
    },
    "workbench.iconTheme": "material-icon-theme",
    "editor.matchBrackets": "always",
    "workbench.tree.indent": 20,
    "breadcrumbs.enabled": true,
    "editor.renderWhitespace": "boundary",
    "editor.renderControlCharacters": true,
    "editor.minimap.enabled": false,
    "workbench.editor.tabSizing": "shrink",
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.enablePreviewFromCodeNavigation": false,

    // ------------------------------------------------------------------------
    // フォント
    // ------------------------------------------------------------------------
    "editor.fontFamily": "更紗等幅ゴシック J",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "terminal.integrated.fontFamily": "更紗等幅ゴシック J",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontWeight": "400",

    // ------------------------------------------------------------------------
    // カーソル
    // ------------------------------------------------------------------------
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.wordWrap": "on",
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?、。「」（）；：・？＜＞＋－＊／｛｝｜～＆％＄＃”！’　にをはがのとも",
    "workbench.list.keyboardNavigation": "simple",
    "workbench.list.automaticKeyboardNavigation": false, // 無効化しないとエクスプローラーでhjklで移動できない

    // ------------------------------------------------------------------------
    // ターミナル
    // ------------------------------------------------------------------------
    "terminal.explorerKind": "external",
    "terminal.integrated.allowChords": false,
    "terminal.external.windowsExec": "%LOCALAPPDATA%\\Microsoft\\WindowsApps\\wt.exe",
    "terminal.integrated.cursorBlinking": true,

    // ------------------------------------------------------------------------
    // 予測変換
    // ------------------------------------------------------------------------
    "editor.acceptSuggestionOnEnter": "on",
    "editor.quickSuggestionsDelay": 30,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

    // ------------------------------------------------------------------------
    // デバッグ
    // ------------------------------------------------------------------------
    "debug.allowBreakpointsEverywhere": true,
    "debug.inlineValues": true,

    // ------------------------------------------------------------------------
    // ファイル
    // ------------------------------------------------------------------------
    "files.autoGuessEncoding": true,
    "files.associations": {
        ".xonshrc": "python",
        ".tmpl": "html"
    },
    "workbench.editor.focusRecentEditorAfterClose": false,

    // ------------------------------------------------------------------------
    // 言語別設定
    // ------------------------------------------------------------------------
    // html
    "html.format.endWithNewline": true,

    // markdown
    "markdownlint.config": {
        "MD004": false,
        "MD007": false,
        "MD009": {
            "br_spaces": 2
        },
        "MD013": false,
        "MD032": false
    },
    "[markdown]": {
        "editor.defaultFormatter": "yzhang.markdown-all-in-one"
    },
    "markdown-preview-enhanced.mermaidTheme": "dark",
    "markdown.extension.list.indentationSize": "inherit",

    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },

    // ------------------------------------------------------------------------
    // その他
    // ------------------------------------------------------------------------
    "workbench.startupEditor": "newUntitledFile",
    "editor.mouseWheelZoom": true,

    // ファイルエクスプローラーの表示対象外
    "files.exclude": {
        "**/.git": false,
        "**/.svn": false,
        "**/.hg": false,
        "**/CVS": false,
        "**/.DS_Store": false,
        "**/.history": false
    },

    // 検索の対象外
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/.history": true
    },

    // ファイル監視の除外
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/.svn/**": true,
        "**/target/**": true,
        "**/.history/**": true
    },

    // neovimの設定
    "vscode-neovim.useWSL": true,
    "vscode-neovim.neovimInitVimPaths.linux": "~/.config/nvim/init.vim",
    "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
    "workbench.activityBar.visible": false
}